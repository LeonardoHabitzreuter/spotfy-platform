.wrapper
  justify-content: center
  display: flex

.overlay
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  right: 0
  bottom: 0
  background-color: rgba(0,0,0,0.5)
  z-index: 1

.spinner
  left: 50%
  right: 50%
  height: 60px
  width: 60px
  border: 8px solid #d9d9d9
  border-left-color: #22a6b3
  border-radius: 50%
  animation: spin 1s linear infinite
  z-index: 2

@keyframes spin
  to { transform: rotate(360deg) }
